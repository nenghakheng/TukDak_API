<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <%= link_to "New User", new_user_path %>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.id, user %></td>
        <td><%= user.firstname %></td>
        <td><%= user.lastname %></td>
        <td><%= user.email %></td>
        <td class="actions" style="display: flex; gap: 10px;">
          <%= link_to "Edit", edit_user_path(user) %>
          <%= button_to "Delete", user_path(user), method: :delete, data: { method: :delete, turbo_confirm: "Are you sure?"  } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
